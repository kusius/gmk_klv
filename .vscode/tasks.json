{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "compile_test_windows",
            "command": "cl",
            "args": [
                "/nologo",
                "/Zi",
                "/DTESTDATA_SVT_IMPLEMENTATION",
                "../code/test.c",
                "/link",
                "/out:test.exe",
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": "build",
            "detail": "Task to build test on windows (MSVC)"
        },
        {
            "type": "cppbuild",
            "label": "compile_test_unix",
            "command": "/usr/bin/clang",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-DTESTDATA_SVT_IMPLEMENTATION",
                "-g",
                "../code/test.c",
                "-o",
                "test"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}